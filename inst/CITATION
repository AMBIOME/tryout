citHeader("To cite package 'tryout' in publications use:")

year <- format(Sys.Date(), "%Y")
note <- sprintf("R package version %s", meta$Version)
bibentry(bibtype = "TechReport",
         title = "Automatic quality control of physical, chemical and marine biological data generated by the SHARK system",
         author = personList(person("Markus", "Lindh"),
                             person("SHARK")),
         year = year,
         institution = "Swedish Meteorological and Hydrological Institute, Data and Information",
         note = note,
         url = "https://cran.r-project.org/package=tryout")
